<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dinedash" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="163dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="88dp"
        android:gravity="center"
        android:text="DineDash"
        android:textColor="#000000"
        android:textSize="36dp"
        android:textStyle="bold|normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card number -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cardNumberLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card number"
        android:layout_marginTop="100dp"
        app:boxStrokeWidth="1dp"
        app:boxBackgroundMode="outline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="19"
            android:textSize="18sp"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Expiry (MM/YY) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cardnumber"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="MM/YY"
        app:boxBackgroundMode="outline"
        app:layout_constraintTop_toBottomOf="@id/cardNumberLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cvcLayout"
        app:layout_constraintHorizontal_weight="2"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="MM/YY"
            android:textSize="18sp"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- CVC -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cvcLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CVC"
        app:boxBackgroundMode="outline"
        app:layout_constraintTop_toBottomOf="@id/cardNumberLayout"
        app:layout_constraintStart_toEndOf="@id/cardnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:hint="CVC"
            android:textSize="18sp"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Checkout Button -->
    <Button
        android:id="@+id/checkout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Checkout"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="@color/button_tint"
        android:textColor="#fff"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cardnumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
