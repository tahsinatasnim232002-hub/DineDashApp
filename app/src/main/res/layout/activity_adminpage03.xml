<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFEEDD"
    android:layout_width="match_parent"
    android:padding="50dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/logoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/dine_dash"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dinedash" />
        <TextView
            android:id="@+id/DineDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="DineDash"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold|normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="#FFEEDD"
        android:gravity="center"
        android:text="Admin Panel"
        android:textColor="@color/button_tint"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoSection"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_tint"
        android:layout_marginTop="80dp"
        android:text="Table-01"
        android:textSize="20dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="290dp" />

    <Button
        android:id="@+id/table2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/button_tint"
        android:text="Table-02"
        android:textSize="20dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/table1" />

    <Button
        android:id="@+id/table3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_tint"
        android:text="Table-03"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table2"
    />



</androidx.constraintlayout.widget.ConstraintLayout>