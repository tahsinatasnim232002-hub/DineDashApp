<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="381dp"
        android:layout_height="85dp"
        android:layout_marginEnd="16dp"
        android:gravity="start"
        android:text="Add your payment methods"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="107dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="301dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="This card will only be charged when you place an order"
        android:textColor="#412e25"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="173dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="285dp"
        android:layout_height="86dp"
        android:backgroundTint="#F16A3A"
        android:gravity="center"
        android:text="ADD CARD"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="462dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="282dp"
        android:layout_height="84dp"
        android:backgroundTint="#F16A3A"
        android:text="ADD BKASH"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="580dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="282dp"
        android:layout_height="73dp"
        android:backgroundTint="#F16A3A"
        android:text="CASH"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="685dp" />

</androidx.constraintlayout.widget.ConstraintLayout>