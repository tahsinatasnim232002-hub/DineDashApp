<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="381dp"
        android:layout_height="85dp"
        android:layout_marginTop="100dp"
        android:gravity="start"
        android:text="Add your payment methods"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/paymentText"
        android:layout_width="301dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="This card will only be charged when you place an order"
        android:textColor="#412e25"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/cardBtn"
        android:layout_width="349dp"
        android:layout_height="85dp"
        android:backgroundTint="#F16A3A"
        android:gravity="center"
        android:text="ADD CARD"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="462dp"
        app:layout_constraintTop_toBottomOf="@+id/paymentText"/>

    <Button
        android:id="@+id/bkashBtn"
        android:layout_width="359dp"
        android:layout_height="88dp"
        android:backgroundTint="#F16A3A"
        android:text="ADD BKASH"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="576dp"
        app:layout_constraintTop_toBottomOf="@+id/cardBtn"/>

    <Button
        android:id="@+id/cashBtn"
        android:layout_width="345dp"
        android:layout_height="83dp"
        android:backgroundTint="#F16A3A"
        android:text="CASH"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="685dp"
        app:layout_constraintTop_toBottomOf="@+id/bkashBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>